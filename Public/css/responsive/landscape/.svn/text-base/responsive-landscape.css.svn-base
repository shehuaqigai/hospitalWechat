/*General landscape*/
@media all and (orientation : landscape) {

    .dialog-container {
        width: 35%;
        height: 52%;
        display: block;
        position:relative;
        overflow: visible;
        margin: 20% 30% 20% 30%;
    }
    .confirm-dialog-container{
        width: 100%;
        height: auto;
        margin: 30% 0 0 0;
    }
    /* Styles */

    .catalog-hot-item {
        -webkit-box-sizing:border-box;
        box-sizing: border-box;
        position:relative;
        width: 98%;
        height: 140px;
        margin: 5px 1%;
        padding: 10px 60px 10px 110px;
        background-repeat: no-repeat;
        background-position:0 center;
        float:left;
    }
    .catalog-hot-item .title{
        margin:5px 0;
        font-weight: bold;
    }
    .catalog-hot-item .author{

    }
    .catalog-hot-item .intro{
        margin-top: 10px;
        height: 40px;
        line-height:22px;
        overflow: hidden;
    }
    .catalog-hot-item .downloadBook, .catalog-hot-item .readBook, .download-loading, .download-fail{
        color: white;
        display: block;
        font-size: 38px;
        height: 80px;
        margin-top: -20px;
        position: absolute;
        right: 10px;
        top: 50%;
        width: 40px;
    }
    .catalog-sub{
        font-size: 22px;
    }
    .subclass{
        font-size: 22px;
    }
    .searchBook{
        background-size:90px 110px;
        left: 6%;
        width: 87%;
    }
    .pagination {
        left: 1%;
        width: 87%;
    }
    /*漫画样式*/
    #animechapterScroller ul, #animemarkList,#animebookmarkScroller .markList{
        margin-left:3.5%;
        margin-top:15px;

    }
    #animechapterScroller .icon-arrow-down,#animechapterScroller .icon-play,#animechapterScroller .icon-pause,#animechapterScroller .icon-book,#animechapterScroller .icon-enter,#animechapterScroller .icon-checkmark{
        width:20%;
        position:relative;
        font-size:2rem;
        top:-50px;

    }
    #animechapterScroller .icon-arrow-down,#animechapterScroller .icon-play,#animechapterScroller .icon-pause,#animechapterScroller .icon-checkmark{
        left:71%;
        height:30px;
    }
    #animechapterScroller .icon-book,#animechapterScroller .icon-enter{
        left:30%;
        line-height:30px;
        height:30px;

    }
    #animebookmarkScroller .icon-cancel,#animebookmarkScroller .icon-enter{
        position:relative;
        font-size:2rem;
        top:-10px;
        width:20%;
        height:30px;
        line-height:30px;

    }
    #animebookmarkScroller .icon-cancel{
        left:50%;
    }
    #animebookmarkScroller .icon-enter{
        left:40%;
    }
    #AnimeChapterWapper #animeMagazineScroller .icon-checkbox{
        width:22%;
        height:30px;
        line-height:30px;
        position:relative;
        top:-50px;
        left:70%;
        font-size:2rem;
    }
    #animechapterScroller .animeteSeasonIndexList a,#animemarkList li a,#animebookmarkScroller .markList a{

        width:50%;
        white-space: nowrap;
        text-overflow:ellipsis;
        overflow:hidden;
        font-size: 1rem;
        margin-left:2%;
        color:white;
        margin-top:10px;

    }

/*
漫画搜索样式
*/
    #comicPage .nav-tabs{
        left:150px;
    }
