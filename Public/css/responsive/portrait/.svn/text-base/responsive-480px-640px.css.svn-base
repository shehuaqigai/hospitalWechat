/*******************/
/*android 2.3 phone*/
/*******************/

/*most old phone width is 480*/
@media all
and (min-width : 480px)
and (max-width : 640px)
and (orientation : portrait) {
    html{
        overflow-x: hidden;
        overflow-y: scroll;
        font-size: 16px;
    }
    .page .page-header .page-header-content {
        height: 94px;
    }
    #comicPage .page-region .page-region-content {
    padding-top:10px;
    }

    .page .page-header .page-header-content .logo {
        left: 24px;
        top: 10px;
        width: 200px;
        height: 100px;
    }

    .page .page-header .page-header-content .user-login {
        margin: 32px 24px 0 0;
    }
    .tile-group-title{
        margin:0px;padding:0px;height:0px;line-height:0px;
    }
    /****************  漫画目录 ******************/
    .tile-content .content-center>i{
        font-size:1.5em;
        width: 50px;
        height: 50px;
        margin-left: -25px;
        margin-top: -25px;
        line-height:50px;
        text-align: center;
    }
    .tile-content .content-center>.icon-arrow-down,.tile-content .content-center>.icon-enter{
        left: 75%;
    }
    .tile-quadro{
        /*2个双格加2个边距*/
        /*210 * 2 + 20 * 2*/
        width:460px;
        padding-left:20px;
    }
    /********************************************/
    .tile {
        width: 99px;
        height: 99px;
        margin: 0 12px 12px 0;
    }

    .tile2t2 {
        margin: 0 12px 12px 0;
        width: 210px;
        height: 210px;
    }

    .tile1t2 {
        margin: 0 12px 12px 0;
        width: 210px;
        height: 99px;
    }

    .tile.double, .doubletile {
        width: 210px;
    }
    .bookClub .rightBtn{
        font-size:42px;
        top:40px;
    }
    .bookClub #refreshGuess{
        top:50px;
    }
    .tile.onehalf {
        width: 137px;
    }
    
    .tile.onehalf-vertical {
        height: 137px;
    }
    .tile.twothird-vertical {
        height: 254px;
    }
    .tile.quadro {
        width: 432px;
    }

    .tile.double-vertical {
        height: 210px;
    }

    .tile .tile-content {
        width: 83px;
        height: 83px;
        padding: 8px 2px 1px 2px;
    }

    .tile.image-slider .tile-content{
        width: 99px;
        height: 99px;
    }

    .tile.double .tile-content {
        width: 194px;
        height: 83px;
        padding: 8px;
    }

    .tile .brandIcon{
        margin: 0px 6px 0px 4px;
    }

    .tile .brandInfo{
        right: 4px;
    }
    .battery
    {
        bottom:0px;
        position:absolute;
        left:0px;
        z-index:2;
    }
    .dcSize {
        bottom:12px;
        position:absolute;
        left:60px;
        color:#006934;
    }

    #curTime
    {
        bottom:15px;
        position:absolute;
        left:15px;
        font-size:0.75rem;
        color:#006934;
    }
    .breadcrumbNav{
        width: 100%;
        height:30px;
        display: block;
        position: relative;
    }
    .breadcrumbNav .breadcrumbNav-container .nav {
        width: 64.5%;
        display: inline-block;
        position: relative;
        padding: 0 1%;
        font-size: 22px;
        line-height: 30px;
        float: left;
        margin: 0 0 0 10px;
    }
    .breadcrumbNav .breadcrumbNav-container .nav span{
        font-size: 22px;
    }



    .breadcrumbNav .breadcrumbNav-container label{
        width: 30%;
        -webkit-box-sizing: border-box;
        display: block;
        position: relative;
        font-size: 40px;
        letter-spacing: 0.02em;
        float: left;
    }

    .input-control.checkbox .helper {
        padding-left: 18px;
        position: relative;
        font-size: 20px;
        line-height: 20px;
        padding-top: 3px;
    }
    .catalog-container{
        display: block;
        position: relative;
        padding: 0 1%;
        font-size: 30px;
        line-height: 50px;
        margin:0 0 0 5px;
    }
    .catalog-items{
        width: 95%;
        height:auto;
        left:20px;
        display: block;
        position: relative;
    }

    .catalog-hot-tab{
        height: 100%;
        display: block;
        position: relative;
        padding: 0 1%;
        margin:0 0 0 3px;
        left: 0px;
    }

    .catalog-hot-tab-header .header-title{
        font-size: 22px;
        float: left;
        line-height: 30px;
        left: 20px;
        position: relative;
        display: block;
        margin: 0;
    }
    .catalog-hot-tab-item{
        line-height: 30px;
        font-size: 18px;
        display: inline-block;
        position: relative;
        text-align: center;
        margin:0 2px;
    }
    .catalog-hot {
        width: 100%;
        display: block;
        position: relative;
    }
    .catalog-hot-tab-content {
        width: 100%;
        height: auto;
        line-height: 30px;
        font-size: 24px;
        height: 170px;
        left: 20px;
        position: relative;
        display: block;
        -webkit-box-sizing: border-box;
    }
    .catalog-hot-tab-content .catalog-tab-content-item {
        width: 100%;
        height: auto;
        display: block;
        padding: 3px;
        position: relative;
        float: left;
        -webkit-box-sizing: border-box;
    }
    .catalog-item {
        line-height: 30px;
        font-size: 24px;
        display: block;
        position: relative;
        margin: 7px 0px 4px 8px;
        float: left;
    }

    .searchBook .title {

        font-weight: bold;
        line-height: 17px;
        font-size: 18px;
    }
    .searchBook .author {
        line-height: 16px;
        font-weight: bold;
        font-size: 16px;
    }
    .searchBook .intro {
        line-height: 15px;
        font-weight: bold;
        font-size: 14px;
        padding-bottom:20px;
    }
    .check_icon_select{
        height: 20px;
        width: 20px;
        display: block;
        left: 0;
        top: 5px;
        z-index: 1;

        background-size: 100% 100%;
        position: absolute;
    }

    .check_icon_selected{
        height: 20px;
        width: 20px;
        display: block;
        left: 0;
        top: 5px;
        z-index: 1;

        background-size: 100% 100%;
        position: absolute;
    }
    .dialog-container {
        width: 52%;
        height: 34%;
        display: block;
        position:relative;
        overflow: visible;
        margin: 30% 20% 30% 20%;
    }
    .tile-share-icon{
        width: 60px;
        font-size: 60px;
        text-align: center;
        line-height: 45px;
        vertical-align: middle;
        height: 65px;
        padding: 15px;
    }
    .catalog-sub{

        font-size: 22px;
    }
    .subclass{
        font-size: 22px;
    }
    .page .pageContent{
        margin-left: 20px;
    }
    .rank-item-double{
        width:200px;
        height: 50px;
        margin:10px 5px;
        font-size: 20px;
        display: block;
        position: relative;
        float: left;
        text-align: center;
        line-height: 50px;
        -webkit-box-sizing: border-box;
    }
    .rank-item-single{
        width:95px;
        height: 50px;
        margin:10px 5px;
        font-size: 20px;
        display: block;
        position: relative;
        float: left;
        text-align: center;
        line-height: 50px;
        -webkit-box-sizing: border-box;
    }
    .ranklist-item-title{
        display: block;
        font-size: 22px;
        height: 50px;
        line-height: 20px;
        top:5px;
        left:10px;
        padding: 0px;
        position: relative;

    }
    .pagination .nextPage,.pagination .backPage{
        font-size: 20px;
        width: 40px;
        height: 25px;
        margin: 5px;
    }
    .pagination .flag {
        color: white;
        padding: 1px;
        position: absolute;
        right: 1px;
        top: 30px;
    }
	.readBookList {
		margin: 20px auto;
		padding-left: 24px;
	}
	.page h3 {
		font-size: 0.7rem;
	}
	.tile .tile-content p{
		font-size:0.5rem;
		font-family: 'Segoe UI', 'Open Sans', Verdana, Arial, Helvetica, sans-serif;
		line-height: 0.8rem;
		height: 2.4rem;
	}
	.shareBtn {
		line-height: 24px;
		font-size: 24px;
		bottom:0;
	}
	.icon-book,.icon-cancel{
		font-size:2rem;
		float:left;
		padding:0.8rem 0 0 0.6rem;
	}
	.icon-arrow-down,.icon-enter,.icon-checkbox,.icon-pause,.icon-play{
		font-size:2rem;
		padding:0.8rem 0.6rem 0 0;
		float:right;
	}
    .deleteBtn {
        font-size:1.2rem;
    }
    .page .page-header .page-header-content h1 {
        top: 55px;
    }
    .chapterListBtn{
        width:58px;
    } 
}